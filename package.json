{
  "name": "benchmarkwatcher",
  "scripts": {
    "test": "jest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm test && npm run test:e2e",
    "check:vocab": "node scripts/check-vocab.js --fail-on-warn",
    "ci:preflight": "npm run check:vocab && npm test && npm run test:e2e"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.0",
    "@playwright/test": "^1.50.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0"
  }
}